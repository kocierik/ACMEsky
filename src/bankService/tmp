  <div>
    <h2 class="text-center font-bold text-xl mb-3">Dati ricevuti dal server</h2>
    <ul id="received-data-menu" class="border-t border-gray-200"></ul>
  </div>
  <script>
    // Funzione per effettuare la richiesta GET al server e popolare il menu con i dati ricevuti
    async function fetchReceivedData() {
      try {
        const response = await fetch('http://localhost:3001/received-data'); // Assicurati di inserire il corretto URL del tuo server
        const data = await response.json();

        // Seleziona il menu
        const menu = document.getElementById('received-data-menu');

        // Cicla attraverso i dati ricevuti e crea un elemento di menu per ciascuno
        for (const key in data) {
          const menuItem = document.createElement('li');
          menuItem.textContent = `${key}: ${data[key]}`;
          menu.appendChild(menuItem);
        }
      } catch (error) {
        console.error('Errore durante la richiesta dei dati:', error);
      }
    }

    // Chiama la funzione per effettuare la richiesta GET al caricamento della pagina
    window.onload = fetchReceivedData;
  </script>
